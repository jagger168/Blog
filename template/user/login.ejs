	<link href="" rel="stylesheet">
	<style type="text/css">
		body{
			font-family: 'Microsoft YaHei';
		}
		#form-login{
			width:300px;
			height:300px;
			background: rgba(200,200,200,.5);
			border-radius: 10px;
			padding:0 10px;
			position: absolute;
			left: 50%;
			top: 50%;
			margin-left: -150px;
			margin-top: -150px;
			box-shadow: 0 0 10px #aaa;
		}
		#form-login h3{
			font-weight: 500;
			line-height: 40px;
			border-bottom: 1px solid #ccc;
		}
		#form-login p{
			margin-left:24px;
		}
		#form-login input{
			width: 200px;
			height: 24px;
			padding-left: 5px;
			outline: none;
		}
		#form-login #submit{
			display: block;
			width: 240px;
			height:30px;
			border: none;
			border-radius: 3px;
			background: #0c3;
			font-size: 16px;
			color: #fff;
			margin: 30px auto;
		}
		#form-login #submit:hover{
			background: #0b0;
		}
		#form-login a{
			display: block;
			width: 140px;
			height: 20px;
			text-align: center;
			margin: 40px auto;
		}
	</style>
</head>
<body>
	<div id="form-login">
		<h3>请登录：</h3>
		<form action="/user/login" method="post">
	    	<p>
	    		<label for="username">用户：</label><input type="text" name="username" required>
